{% extends 'back.html.twig' %}

{% block title "Mes decks" %}

{% block body %}

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-200"><i class="fas fa-layer-group"></i> Mes decks</h1>
        <div class="d-sm-inline-block">
            <a href="{{ path('planeswalkers.deck.new') }}" class="d-sm-inline-block btn btn-sm btn-success shadow-sm">
                <i class="fas fa-plus fa-sm text-white-50"></i> Cr√©er
            </a>
        </div>
    </div>

    <hr>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm table-striped" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Couleur</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for deck in decks %}
                        <tr>
                            <td>{{ deck.title }}</td>
                            <td>
                                {% for color in deck.colorsDeck %}
                                    <span class="mx-1 d-inline-block card-symbol-{{ color }}" style="width:20px;height:20px;"></span>
                                {% endfor %}
                            </td>
                            <td>{{ deck.updated|date('d/m/Y') }}</td>
                            <td>
                                <a href="{{ path('planeswalkers.deck.edit', {id: deck.id}) }}">
                                    voir
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}