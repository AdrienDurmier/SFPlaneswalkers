{% extends 'back.html.twig' %}

{% block title %}
    {{ deck.title }} - Legality
{% endblock %}

{% block body %}

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-200"><i class="fas fa-layer-group"></i> {{ deck.title }} - Legality</h1>
        <div class="d-sm-inline-block">
            <a href="{{ path('planeswalkers.deck.edit', {id: deck.id}) }}" class="btn btn-sm btn-secondary shadow-sm">
                <i class="fas fa-reply fa-sm text-white-50"></i>
            </a>
        </div>
    </div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('planeswalkers.deck.index') }}">Mes decks</a></li>
            <li class="breadcrumb-item"><a href="{{ path('planeswalkers.deck.edit', {id: deck.id }) }}">{{ deck.title }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Legality</li>
        </ol>
    </nav>

    <hr>

    {# Contenu du deck #}
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex align-items-center justify-content-between">
            <div class="h6 m-0 font-weight-bold text-light">Deck</div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-sm table-striped">
                        <thead>
                        <tr>
                            <th>Standard</th>
                            <th>Future Standard</th>
                            <th>Modern</th>
                            <th>Legacy</th>
                            <th>Pauper</th>
                            <th>Penny Dreadful</th>
                            <th>Commander</th>
                            <th>Duel Commander</th>
                            <th>Brawl</th>
                            <th>Vintage</th>
                            <th>Old School (93/94)</th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{ legalities['deck']['legality']['standard']|display_boolean_picto|raw }}</td>
                                <td>{{ legalities['deck']['legality']['future']|display_boolean_picto|raw }}</td>
                                <td>{{ legalities['deck']['legality']['modern']|display_boolean_picto|raw }}</td>
                                <td>{{ legalities['deck']['legality']['legacy']|display_boolean_picto|raw }}</td>
                                <td>{{ legalities['deck']['legality']['pauper']|display_boolean_picto|raw }}</td>
                                <td>{{ legalities['deck']['legality']['penny']|display_boolean_picto|raw }}</td>
                                <td>{{ legalities['deck']['legality']['commander']|display_boolean_picto|raw }}</td>
                                <td>{{ legalities['deck']['legality']['duel']|display_boolean_picto|raw }}</td>
                                <td>{{ legalities['deck']['legality']['brawl']|display_boolean_picto|raw }}</td>
                                <td>{{ legalities['deck']['legality']['vintage']|display_boolean_picto|raw }}</td>
                                <td>{{ legalities['deck']['legality']['oldschool']|display_boolean_picto|raw }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {# Cartes principales #}
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex align-items-center justify-content-between">
            <div class="h6 m-0 font-weight-bold text-light">Main deck</div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Carte</th>
                                <th>Standard</th>
                                <th>Future Standard</th>
                                <th>Modern</th>
                                <th>Legacy</th>
                                <th>Pauper</th>
                                <th>Penny Dreadful</th>
                                <th>Commander</th>
                                <th>Duel Commander</th>
                                <th>Brawl</th>
                                <th>Vintage</th>
                                <th>Old School (93/94)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for card in legalities['cartes'] %}
                                {% if card.quantite > 0 %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('planeswalkers.card.show', {id: card.carte.id}) }}">
                                                <img src="{{ card.carte.image_uris.normal }}" alt="{{ card.carte.name }}" class="img-fluid" style="border-radius:15px;width:80px;">
                                            </a>
                                        </td>
                                        <td>
                                            <b>{{ card.carte.name }}</b>
                                            <br><em>{{ card.carte.type_line }}</em>
                                        </td>
                                        <td>{{ card.standard }}</td>
                                        <td>{{ card.future }}</td>
                                        <td>{{ card.modern }}</td>
                                        <td>{{ card.legacy }}</td>
                                        <td>{{ card.pauper }}</td>
                                        <td>{{ card.penny }}</td>
                                        <td>{{ card.commander }}</td>
                                        <td>{{ card.duel }}</td>
                                        <td>{{ card.brawl }}</td>
                                        <td>{{ card.vintage }}</td>
                                        <td>{{ card.oldschool }}</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}