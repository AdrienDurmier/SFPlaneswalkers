{% extends 'back.html.twig' %}

{% block title "Signaler un bug" %}

{% block stylesheets %}
    <style>
        .cke_reset_all {
            display: none !important;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-200"><i class="fas fa-bug"></i> Signaler un bug</h1>
    </div>

    <hr>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post" action="#" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="content">Commentaire</label>
                    <textarea id="content" name="content" class="form-control ckeditor" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="filename">Joindre un fichier</label>
                    <input type="file" id="filename" name="filename" class="form-control form-control-sm" aria-label="filename">
                </div>
                <hr>
                <button type="submit" class="btn btn-sm btn-success">
                    <i class="far fa-paper-plane"></i>&nbsp;Envoyer
                </button>
            </form>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        CKEDITOR.replaceAll('ckeditor');
    </script>
{% endblock %}