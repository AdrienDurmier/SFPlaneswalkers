{% extends 'back.html.twig' %}

{% block title %}
    Créer un deck
{% endblock %}

{% block body %}

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-200"><i class="fas fa-layer-group"></i> Créer un deck</h1>
    </div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('planeswalkers.deck.index') }}">Mes decks</a></li>
            <li class="breadcrumb-item active" aria-current="page">Créer un deck</li>
        </ol>
    </nav>

    <hr>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form action="#" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Titre</label>
                    <input id="title" name="title" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="content">Contenu</label>
                    <textarea id="content" name="content" class="form-control" rows="3"></textarea>
                </div>
                <hr>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <input id="public" name="public" type="checkbox" aria-label="Publier">&nbsp;Publier
                        </span>
                    </div>
                    <button class="btn btn-success" type="submit">
                        <i class="far fa-save"></i>&nbsp;Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}